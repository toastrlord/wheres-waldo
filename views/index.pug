extends layout
block prepend content
  title #{imageName}
  div(id='screenCover')
    p(class='center instructionText') Ready?
    button(id='startButton') Go!
  div(id='circle')
  div(id='buttonContainer')
  img(id='image' src='/images/' + image + '.png')
  each c in characters
    div(class='character')= c
  form(method='POST' action='')
    label(for='name') Name: 
    input(type='text' name='name' placeholder='Enter your name!')
    label(for='score') Score: 
    input(id='score' readonly='readonly' name='score')
    button.btn.btn-primary(type='submit') Submit!

  script(src='/javascripts/image.js')